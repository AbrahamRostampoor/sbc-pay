{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Payment Request",
  "required": [
    "payment_info",
    "business_info",
    "filing_info"
  ],
  "properties": {
    "payment_info": {
      "oneOf": [
        {
          "$ref": "#/definitions/payment_info"
        }
      ]
    },
    "business_info": {
      "oneOf": [
        {
          "$ref": "#/definitions/business_info"
        }
      ]
    },
    "filing_info": {
      "oneOf": [
        {
          "$ref": "#/definitions/filing_info"
        }
      ]
    }
  },
  "definitions": {
    "payment_info": {
      "$id": "payment_info",
      "type": "object",
      "required": [
        "payment_system"
      ],
      "properties": {
        "method_of_payment": {
          "$id": "#/properties/method_of_payment",
          "type": "string",
          "title": "Method of payment",
          "default": "CC",
          "examples": [
            "CC"
          ],
          "pattern": "^(.*)$"
        },
        "payment_system": {
          "$id": "#/properties/payment_system",
          "type": "string",
          "title": "Payment System",
          "default": "PAYBC",
          "examples": [
            "PAYBC"
          ],
          "pattern": "^(.*)$"
        }
      }
    },
    "business_info": {
      "$id": "business_info",
      "type": "object",
      "required": [
        "business_identifier",
        "corp_type",
        "business_name",
        "contact_info"
      ],
      "properties": {
        "business_identifier": {
          "$id": "#/properties/business_identifier",
          "type": "string",
          "title": "Business/Corp Identifier",
          "default": "",
          "examples": [
            "CP1000"
          ],
          "pattern": "^(.*)$"
        },
        "corp_type": {
          "$id": "#/properties/corp_type",
          "type": "string",
          "title": "Corp Type",
          "default": "",
          "examples": [
            "CP"
          ],
          "pattern": "^(.*)$"
        },
        "business_name": {
          "$id": "#/properties/business_name",
          "type": "string",
          "title": "Business Name",
          "default": "",
          "examples": [
            "XYZ Corp"
          ],
          "pattern": "^(.*)$"
        },
        "contact_info": {
          "oneOf": [
            {
              "$ref": "#/definitions/contact_info"
            }
          ]
        }
      }
    },
    "filing_info": {
      "$id": "filing_info",
      "type": "object",
      "title": "Filing Info",
      "required": [
        "filing_types"
      ],
      "properties": {
        "date": {
          "$id": "#/properties/date",
          "type": "string",
          "title": "Date on which fees are applicable",
          "default": "",
          "examples": [
            "2019-01-01"
          ],
          "pattern": "^\\d{4}\\-(0?[1-9]|1[012])\\-(0?[1-9]|[12][0-9]|3[01])$"
        },
        "filing_types": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "$ref": "#/definitions/filing_type"
              }
            ]
          }
        }
      }
    },
    "filing_type": {
      "$id": "filing_type",
      "type": "object",
      "title": "Filing Type",
      "required": [
        "filing_type_code"
      ],
      "properties": {
        "filing_type_code": {
          "$id": "#/properties/filing_types/items/properties/filing_type_code",
          "type": "string",
          "title": "Filing type code",
          "default": "",
          "examples": [
            "OTADD"
          ],
          "pattern": "^(.*)$"
        },
        "priority": {
          "$id": "#/properties/filing_types/items/properties/priority",
          "type": "boolean",
          "title": "Filing Priority",
          "default": false,
          "examples": [
            true
          ]
        },
        "filing_description": {
          "$id": "#/properties/filing_types/items/properties/filing_description",
          "type": "string",
          "title": "Filing description",
          "default": "",
          "examples": [
            "2019 Annual Report"
          ],
          "pattern": "^(.*)$"
        },
        "quantity": {
          "$id": "#/properties/filing_types/items/properties/quantity",
          "type": "integer",
          "title": "Quantity",
          "default": 1,
          "examples": [
            1
          ]
        }
      }
    },
    "contact_info": {
      "$id": "contact_info",
      "type": "object",
      "title": "Contact Info",
      "required": [
        "city",
        "postal_code",
        "province",
        "address_line_1",
        "country"
      ],
      "properties": {
        "city": {
          "$id": "#/properties/city",
          "type": "string",
          "title": "City",
          "default": "",
          "examples": [
            "Victoria",
            "Vancouver"
          ],
          "pattern": "^(.*)$"
        },
        "postal_code": {
          "$id": "#/properties/postal_code",
          "type": "string",
          "title": "Postal Code",
          "default": "",
          "examples": [
            "V8P2N2"
          ],
          "pattern": "^(.*)$"
        },
        "province": {
          "$id": "#/properties/province",
          "type": "string",
          "title": ":Province",
          "default": "",
          "examples": [
            "BC"
          ],
          "pattern": "^(.*)$"
        },
        "address_line_1": {
          "$id": "#/properties/address_line_1",
          "type": "string",
          "title": "Address line 1",
          "default": "",
          "examples": [
            "1000 Douglas Street"
          ]
        },
        "country": {
          "$id": "#/properties/country",
          "type": "string",
          "title": "Country",
          "default": "CA",
          "examples": [
            "CA",
            "US"
          ]
        }
      }
    }
  }
}
