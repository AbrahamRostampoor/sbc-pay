{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Invoice Request",
  "properties": {
    "invoice": {
      "oneOf": [
        {
          "$ref": "#/definitions/invoice_request"
        }
      ]
    }
  },
  "definitions": {
    "invoice_request": {
      "required": [
        "address_line_1",
        "batch_source",
        "city",
        "comments",
        "contact_first_name",
        "contact_last_name",
        "country",
        "customer_site_id",
        "customer_transaction_type",
        "entity_legal_name",
        "entity_name",
        "postal_code",
        "province",
        "site_name"
      ],
      "properties": {
        "entity_name": {
          "type": "string",
          "description": "Entity name"
        },
        "entity_legal_name": {
          "type": "string",
          "description": "Legal entity name"
        },
        "site_name": {
          "type": "string",
          "description": "Site name"
        },
        "contact_first_name": {
          "type": "string",
          "description": "First Name of the contact person"
        },
        "contact_last_name": {
          "type": "string",
          "description": "Last Name of the contact person"
        },
        "phone_number": {
          "type": "string",
          "description": "Phone number of the contact person"
        },
        "email": {
          "type": "string",
          "description": "Email of the contact person"
        },
        "address_line_1": {
          "type": "string",
          "description": "Address Line of entity"
        },
        "city": {
          "type": "string",
          "description": "City of entity"
        },
        "province": {
          "type": "string",
          "description": "Province"
        },
        "country": {
          "type": "string",
          "enum": [
            "CA",
            "US"
          ],
          "description": "Country"
        },
        "postal_code": {
          "type": "string",
          "description": "Postal Code"
        },
        "customer_site_id": {
          "type": "string",
          "description": "Customer Site ID ??"
        },
        "batch_source": {
          "type": "string",
          "enum": [
            "MANUAL-OTHER"
          ],
          "default": "MANUAL-OTHER",
          "description": "Batch Source ?? MANUAL-OTHER"
        },
        "customer_transaction_type": {
          "type": "string",
          "enum": [
            "WTS-INVOICE-STANDARD",
            "WTS_CREDIT_MEMO",
            "WTS_DEBIT_MEMO"
          ],
          "description": "Customer Transaction Type ?? WTS-INVOICE-STANDARD/WTS_CREDIT_MEMO/WTS_DEBIT_MEMO"
        },
        "comments": {
          "type": "string",
          "description": "Invoice Comments"
        },
        "method_of_payment": {
          "type": "string",
          "enum": [
            "CC",
            "BCOL"
          ],
          "description": "Method of Payment. CC/BCOL..",
          "default": "CC"
        },
        "lineItems": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/invoice_line_item"
          }
        }
      },
      "type": "object"
    },
    "invoice_line_item": {
      "required": [
        "line_name",
        "line_number",
        "line_type",
        "quantity",
        "unit_price"
      ],
      "properties": {
        "line_number": {
          "type": "string",
          "description": "Line number"
        },
        "line_type": {
          "type": "string",
          "enum": [
            "LINE",
            "TAX"
          ],
          "description": "Line type, LINE/TAX"
        },
        "line_name": {
          "type": "string",
          "description": "Line name"
        },
        "description": {
          "type": "string",
          "description": "Line item description"
        },
        "unit_price": {
          "type": "string",
          "description": "Line item amount"
        },
        "quantity": {
          "type": "string",
          "description": "Line item quantity"
        }
      },
      "type": "object"
    }
  }
}