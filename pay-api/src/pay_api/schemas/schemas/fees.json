{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/fees",
  "type": "object",
  "title": "Fees Response",
  "required": [
    "filingFees",
    "filingType",
    "filingTypeCode"
  ],
  "properties": {
    "filingFees": {
      "$id": "#/properties/filingFees",
      "type": "number",
      "title": "Fees for filing",
      "default": 0,
      "examples": [
        10
      ]
    },
    "filingType": {
      "$id": "#/properties/filingType",
      "type": "string",
      "title": "Filing Type Description",
      "examples": [
        "Change of Director",
        "Change of registered address"
      ],
      "pattern": "^(.*)$"
    },
    "filingTypeCode": {
      "$id": "#/properties/filingTypeCode",
      "type": "string",
      "title": "Filing Type Code",
      "examples": [
        "OTCDR",
        "OTANN"
      ],
      "pattern": "^(.*)$"
    },
    "priorityFees": {
      "$id": "#/properties/priorityFees",
      "type": "number",
      "title": "Priority fees",
      "examples": [
        10
      ]
    },
    "futureEffectiveFees": {
      "$id": "#/properties/futureEffectiveFees",
      "type": "number",
      "title": "Future Effective fees",
      "examples": [
        10
      ]
    },
    "serviceFees": {
      "$id": "#/properties/serviceFees",
      "type": "number",
      "title": "Service fees",
      "examples": [
        10
      ]
    },
    "tax": {
      "$id": "#/properties/tax",
      "type": "object",
      "title": "Tax Schema",
      "required": [
        "gst",
        "pst"
      ],
      "properties": {
        "gst": {
          "$id": "#/properties/tax/properties/gst",
          "type": "number",
          "title": "GST",
          "examples": [
            10
          ]
        },
        "pst": {
          "$id": "#/properties/tax/properties/pst",
          "type": "number",
          "title": "PST",
          "default": 0,
          "examples": [
            10
          ]
        }
      }
    }
  }
}
