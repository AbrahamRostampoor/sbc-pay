{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/line_item",
  "type": "object",
  "title": "Payment Line Item",
  "required": [
    "description",
    "filing_fees",
    "gst",
    "id",
    "processing_fees",
    "pst",
    "quantity",
    "service_fees",
    "status_code",
    "total"
  ],
  "properties": {
    "description": {
      "$id": "#/properties/line_items/items/properties/description",
      "type": "string",
      "title": "Description",
      "default": "",
      "examples": [
        "TEST"
      ],
      "pattern": "^(.*)$"
    },
    "filing_fees": {
      "$id": "#/properties/line_items/items/properties/filing_fees",
      "type": "integer",
      "title": "Filing Fees",
      "default": 0,
      "examples": [
        20
      ]
    },
    "gst": {
      "$id": "#/properties/line_items/items/properties/gst",
      "type": "integer",
      "title": "GST",
      "default": 0,
      "examples": [
        0
      ]
    },
    "id": {
      "$id": "#/properties/line_items/items/properties/id",
      "type": "integer",
      "title": "Line Identifier",
      "default": 0,
      "examples": [
        1
      ]
    },
    "processing_fees": {
      "$id": "#/properties/line_items/items/properties/processing_fees",
      "type": "integer",
      "title": "Processing fees",
      "default": 0,
      "examples": [
        0
      ]
    },
    "pst": {
      "$id": "#/properties/line_items/items/properties/pst",
      "type": "integer",
      "title": "PST",
      "default": 0,
      "examples": [
        0
      ]
    },
    "quantity": {
      "$id": "#/properties/line_items/items/properties/quantity",
      "type": "integer",
      "title": "Quantity",
      "default": 0,
      "examples": [
        1
      ]
    },
    "service_fees": {
      "$id": "#/properties/line_items/items/properties/service_fees",
      "type": "integer",
      "title": "Service Fees",
      "default": 0,
      "examples": [
        0
      ]
    },
    "status_code": {
      "$id": "#/properties/line_items/items/properties/status_code",
      "type": "string",
      "title": ":Line Status Code",
      "default": "",
      "examples": [
        "CREATED"
      ],
      "pattern": "^(.*)$"
    },
    "total": {
      "$id": "#/properties/line_items/items/properties/total",
      "type": "integer",
      "title": "Line Total",
      "default": 0,
      "examples": [
        20
      ]
    }
  }
}
