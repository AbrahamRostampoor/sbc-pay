{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/invoice",
  "type": "object",
  "title": "Invoice",
  "required": [
    "_links",
    "created_by",
    "created_on",
    "id",
    "invoice_number",
    "reference_number",
    "status_code",
    "total"
  ],
  "properties": {
    "_links": {
      "oneOf": [
        {
          "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/links"
        }
      ]
    },
    "created_by": {
      "$id": "#/properties/created_by",
      "type": "string",
      "title": "The Created_by Schema",
      "default": "",
      "examples": [
        "CP0001219"
      ],
      "pattern": "^(.*)$"
    },
    "created_on": {
      "$id": "#/properties/created_on",
      "type": "date",
      "title": "The Created_on Schema",
      "default": "",
      "examples": [
        "2019-06-05T11:23:03.196226+00:00"
      ],
      "pattern": "^(.*)$"
    },
    "id": {
      "$id": "#/properties/id",
      "type": "integer",
      "title": "The Id Schema",
      "default": 0,
      "examples": [
        1
      ]
    },
    "invoice_number": {
      "$id": "#/properties/invoice_number",
      "type": "string",
      "title": "The Invoice_number Schema",
      "default": "",
      "examples": [
        "10020"
      ],
      "pattern": "^(.*)$"
    },
    "reference_number": {
      "$id": "#/properties/reference_number",
      "type": "string",
      "title": "The Reference_number Schema",
      "default": "",
      "examples": [
        "10005"
      ],
      "pattern": "^(.*)$"
    },
    "status_code": {
      "$id": "#/properties/status_code",
      "type": "string",
      "title": "The Status_code Schema",
      "default": "",
      "examples": [
        "CREATED"
      ],
      "pattern": "^(.*)$"
    },
    "total": {
      "$id": "#/properties/total",
      "type": "integer",
      "title": "The Total Schema",
      "default": 0,
      "examples": [
        50
      ]
    },
    "line_items": {
      "anyOf": [
        {
          "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/line_item"
        }
      ]
    },
    "receipts": {
      "anyOf": [
        {
          "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/receipt"
        }
      ]
    }
  }
}
