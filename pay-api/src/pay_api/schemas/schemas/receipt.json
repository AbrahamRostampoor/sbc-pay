{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/receipt",
  "type": "object",
  "title": "Receipt",
  "required": [
    "id",
    "receiptAmount",
    "receiptDate",
    "receiptNumber"
  ],
  "properties": {
    "id": {
      "$id": "#/properties/receipts/items/properties/id",
      "type": "integer",
      "title": "Receipt identifier",
      "default": 0,
      "examples": [
        1
      ]
    },
    "receiptAmount": {
      "$id": "#/properties/receipts/items/properties/receiptAmount",
      "type": "number",
      "title": "Amount",
      "default": 0,
      "examples": [
        0
      ]
    },
    "receiptDate": {
      "$id": "#/properties/receipts/items/properties/receiptDate",
      "type": "string",
      "title": "Receipt Date",
      "default": "",
      "examples": [
        "2019-01-02T00:00:00+00:00"
      ],
      "pattern": "^(.*)$"
    },
    "receiptNumber": {
      "$id": "#/properties/receipts/items/properties/receiptNumber",
      "type": "string",
      "title": "Receipt number",
      "default": "",
      "examples": [
        "123451"
      ],
      "pattern": "^(.*)$"
    }
  }
}