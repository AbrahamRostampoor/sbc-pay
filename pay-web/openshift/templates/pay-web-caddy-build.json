{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "pay-web-caddy",
        "creationTimestamp": null
    },
    "objects": [
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "pay-web-caddy",
                "creationTimestamp": null,
                "labels": {
                    "app": "pay-web-caddy"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChange": {}
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "runPolicy": "Serial",
                "source": {
                    "type": "Dockerfile",
                    "dockerfile": "FROM bcgov-s2i-caddy\nCOPY dist /var/www/html/",
                    "images": [
                        {
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "pay-web:latest"
                            },
                            "paths": [
                                {
                                    "sourcePath": "/opt/app-root/src/dist",
                                    "destinationDir": "./"
                                }
                            ]
                        }
                    ]
                },
                "strategy": {
                    "type": "Docker",
                    "dockerStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "namespace": "openshift",
                            "name": "bcgov-s2i-caddy:latest"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "pay-web-caddy:latest"
                    }
                },
                "resources": {},
                "postCommit": {},
                "nodeSelector": null,
                "successfulBuildsHistoryLimit": 5,
                "failedBuildsHistoryLimit": 5
            },
            "status": {
                "lastVersion": 0
            }
        }
    ]
}
